                  BorderThickness="0" Margin="0,85,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="299" Width="810">

                <DataGrid.Columns>
                    <DataGridTemplateColumn CanUserResize="False" Width="48">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}" x:Name="chkSelectAll" IsChecked="{Binding IsAllSelected}" Checked="chkSelectAll_Checked" Unchecked="chkSelectAll_Unchecked"/>

                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox x:Name="dg" Unchecked="dg_Unchecked" Checked="dg_Checked" Style="{StaticResource CheckBoxStyle1}" IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Mã Sản Phẩm" IsReadOnly="True" CanUserResize="False" Width="120" Binding="{Binding maSanPham}"/>
                    <DataGridTextColumn Header="Tên Sản Phẩm" IsReadOnly="True" CanUserResize="False" Width="150" Binding="{Binding tenSanPham}"/>

                    <DataGridTextColumn Header="Đơn Giá" IsReadOnly="True" CanUserResize="False" Width="85" Binding="{Binding donGia, StringFormat={}{0:N0}đ}"/>
                    <DataGridTextColumn Header="Số Lượng" IsReadOnly="True" CanUserResize="False" Width="85" Binding="{Binding soLuong}"/>
                    <DataGridTextColumn Header="Khuyến mãi" IsReadOnly="True" CanUserResize="False" Width="100" Binding="{Binding khuyenMai}"/>
                    <DataGridTextColumn Header="Thành Tiền" IsReadOnly="True" CanUserResize="False" Width="93" Binding="{Binding thanhTien, StringFormat={}{0:N0}đ}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="" IsReadOnly="True" Width="115">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Margin="3 0 0 0" Style="{StaticResource gridEditButton}" BorderBrush="White" Background="White"  Width="25" Height="25" Click="btReduceProduct_Click" >
                                        <fa:IconImage Icon="Minus" Foreground="#0072BC"/>
                                    </Button>
                                    <Button x:Name="btAddProduct" Margin="3 0 0 0" Style="{StaticResource gridEditButton}" BorderBrush="White" Background="White"  Width="25" Height="25" Click="btAddProduct_Click" >
                                        <fa:IconImage Icon="Add" Foreground="#0072BC"/>
                                    </Button>
                                    <Button x:Name="btxoale" Margin="3 0 0 0" Width="25" Height="25" BorderBrush="White" Background="White" Style="{StaticResource gridRemoveButton}" Click="btxoale_Click">
                                        <fa:IconImage Icon="TrashCan" Foreground="#0072BC" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Background="white" Height="63" Width="249" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0">
