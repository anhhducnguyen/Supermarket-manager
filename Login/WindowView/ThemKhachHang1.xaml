                <!--Nút Save-->
                <Button x:Name="btluukhachhang"
                            Command="{Binding LoginCommand}"                            
                            Content="Lưu"                            
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Foreground="White"
                            HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Click="btluukhachhang_Click" Margin="0,0,137,19" Width="90">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0072bc"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Height="30"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005389"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                </Button>

                <!--Nút Exit-->
                <Button x:Name="btthoatkhachhang"
                            Command="{Binding LoginCommand}"                            
                            Content="Thoát"                            
                            FontSize="12"
                            FontFamily="Montserrat"
                            FontWeight="Medium"
                            Cursor="Hand"
                            BorderThickness="0"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Foreground="White" Margin="0,0,30,19" Click="btthoat_Click" Width="90">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0072bc"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Height="30"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005389"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>



